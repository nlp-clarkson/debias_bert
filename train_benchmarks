#!/usr/bin/env bash

export MY_DIR="/home/temp_user"
export BERT_BIN_DIR="$MY_DIR/github-bert/bert"
export BERT_BASE_DIR="$MY_DIR/corpora/uncased_L-12_H-768_A-12"
export GLUE_DIR="$MY_DIR/glue/glue_data"
export OUTPUT_DIR="/tmp/debug"

INPUT="benchmarks.txt"
while IFS= read -r BENCHMARK
do
  echo "Starting: $BENCHMARK"
  python $BERT_BIN_DIR/run_classifier.py \
    --task_name=$BENCHMARK \
    --do_train=true \
    --do_eval=true \
    --data_dir=$GLUE_DIR/$BENCHMARK \
    --vocab_file=$BERT_BASE_DIR/vocab.txt \
    --bert_config_file=$BERT_BASE_DIR/bert_config.json \
    --init_checkpoint=$BERT_BASE_DIR/bert_model.ckpt \
    --max_seq_length=128 \
    --train_batch_size=32 \
    --learning_rate=2e-5 \
    --num_train_epochs=3.0 \
    --output_dir=$OUTPUT_DIR/$BENCHMARK
  echo "Completed: $BENCHMARK"
done < "$INPUT"


